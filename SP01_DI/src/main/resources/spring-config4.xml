    <bean class="my.animals4.Vasya" id="vasya">
        <constructor-arg name="name" value="Vasya"/>
        <constructor-arg name="pets">
            <list>
                <ref bean="murka" />
                <ref bean="bobik" />
            </list>
        </constructor-arg>
    </bean>

    <bean class="my.animals4.HumanFeedsPets">
        <property name="human" ref="vasya" />
    </bean>


</beans>
